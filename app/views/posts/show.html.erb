<%=
  react_component(
    'Post',
    {
      postId: @post.id,
      postStatuses: @post_statuses,
      isLoggedIn: user_signed_in?,
      isPowerUser: user_signed_in? ? (current_user.role == 'admin' || current_user.role == 'moderator') : false,
      authenticityToken: form_authenticity_token,
    }
  )
%>